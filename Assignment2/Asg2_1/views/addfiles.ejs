<html>
<head>
    <title>Upload Multiple Image</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body class="bg-secondary">
  <br><br>
  <br><br>
  <br>
    <div class="row">
        <div class="col-md-4 offset-md-4" style="background-color: #fff; margin-top:25px; padding:20px;">
            <h3>Upload Multiple Images</h3>
            <form action="/uploads" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                    <label>Add Files</label>
                    <input type="file" class="form-control" name="multiplefiles" multiple />                  
                </div>                            
                <div class="form-group">
                    <button type="submit" class="btn btn-info">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

